<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
  "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
  "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
    <module name="TreeWalker">
        <!-- Évite les imports avec "*" pour garder un meilleur contrôle sur les dépendances -->
        <module name="AvoidStarImport"/>       

        <!-- Assure que tous les imports inutilisés sont supprimés -->
        <module name="UnusedImports"/>        

        <!-- Limite la longueur des lignes pour une meilleure lisibilité -->
        <module name="LineLength">
            <property name="max" value="120"/>
        </module>

        <!-- Vérifie que chaque méthode a une documentation Javadoc -->
        <module name="JavadocMethod"/>         

        <!-- Vérifie que les classes ont une documentation Javadoc -->
        <module name="JavadocType"/>           

        <!-- Vérifie la présence de logs et leur bon usage (ex. pas de logs vides) -->
        <module name="Regexp">                 
            <property name="format" value="Logger\.getLogger\(.+\)\.log\(.*\)"/>
            <property name="message" value="Ensure proper logging is used"/>
        </module>

        <!-- Vérifie que les méthodes ne sont pas trop complexes (ex. trop de branches) -->
        <module name="CyclomaticComplexity">   
            <property name="max" value="10"/>
        </module>

        <!-- Vérifie la cohérence du formatage des accolades -->
        <module name="LeftCurly"/>
        <module name="RightCurly"/>

        <!-- Vérifie que les noms des variables suivent les conventions Java -->
        <module name="LocalVariableName"/>
        <module name="MemberName"/>
    </module>
</module>
